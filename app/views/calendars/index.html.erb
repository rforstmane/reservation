<p id="notice"><%= notice %></p>

<div id="menubar">
  <ul id="menu">
    <li class="home"><%= link_to 'HOME', calendars_path %></li>
    <li class="employee"><%= link_to 'EMPLOYEE', employees_path %></li>
    <li class="bike"><%= link_to 'BICYCLE',bicycles_path %></li>
  </ul>
</div>

<h2>Calendars</h2>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Bicycle</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.employee.full_name %></td>
        <td><%= calendar.bicycle.bicycle_type %></td>
        <td><%= calendar.start_time %></td>
        <td><%= calendar.end_time %></td>
        <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



